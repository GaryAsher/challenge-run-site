{
  "name": "challenge-run-site",
  "private": true,
  "scripts": {
    "//": "=== SETUP & SYNC ===",
    "sync:git": "git fetch origin && git reset --hard origin/main",
    
    "//": "=== VALIDATION (Run before committing) ===",
    "validate": "npm run validate:schema && npm run validate:runs",
    "validate:schema": "node scripts/validate-schema.js",
    "validate:runs": "node scripts/validate-runs.js",
    "detect:unknown": "node scripts/detect-unknown-terms.js",

    "//": "=== DIAGNOSTICS ===",
    "diagnose:game": "node scripts/diagnose-game.js",
    "check:yaml": "node scripts/check-yaml-syntax.js",
    
    "//": "=== GENERATION (Run after adding/editing games) ===",
    "generate": "npm run generate:codeowners && npm run generate:run-categories",
    "generate:codeowners": "node scripts/generate-codeowners.js",
    "generate:run-categories": "node scripts/generate-run-category-pages.js",
    "generate:run-form": "node scripts/generate-run-form.js",
    
    "//": "=== CHECKS (CI validation - read-only) ===",
    "check:all": "npm run check:run-categories && npm run check:codeowners",
    "check:run-categories": "node scripts/generate-run-category-pages.js --check",
    "check:codeowners": "node scripts/generate-codeowners.js --check",
    
    "//": "=== RUN PROMOTION (Moderator workflow) ===",
    "promote:runs": "node scripts/promote-runs.js",
    "promote:runs:dry": "node scripts/promote-runs.js --dry-run",
    
    "//": "=== BUILD (Production assets) ===",
    "build": "npm run build:css && npm run build:js",
    "build:css": "npx clean-css-cli assets/css/style.css -o assets/css/style.min.css",
    "build:js": "npx terser assets/js/main.js -o assets/js/main.min.js -c -m"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "terser": "^5.27.0"
  }
}
