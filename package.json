{
  "name": "challenge-run-site",
  "private": true,
  "scripts": {
    "//": "=== SETUP & SYNC ===",
    "sync:git": "git fetch origin && git reset --hard origin/main",
    
    "//1": "=== VALIDATION ===",
    "validate": "npm run validate:schema && npm run validate:runs && npm run validate:terms",
    "validate:schema": "node scripts/validate-schema.js",
    "validate:runs": "node scripts/validate-runs.js",
    "validate:terms": "node scripts/check-banned-terms.js",
    
    "//2": "=== GENERATION ===",
    "generate": "npm run generate:codeowners && npm run generate:game-pages && npm run generate:run-categories && npm run generate:form-index",
    "generate:codeowners": "node scripts/generate-codeowners.js",
    "generate:game-pages": "node scripts/generate-game-pages.js",
    "generate:run-categories": "node scripts/generate-run-category-pages.js",
    "generate:form-index": "node scripts/generate-form-index.js",
    
    "//3": "=== QUICK COMMANDS ===",
    "regen": "npm run generate && git add -A && git commit -m 'chore: Regenerate pages' && git push",
    "regen:dry": "npm run generate && git status",
    
    "//4": "=== CI CHECKS ===",
    "check:all": "npm run check:run-categories && npm run check:codeowners && npm run check:game-pages",
    "check:run-categories": "node scripts/generate-run-category-pages.js --check",
    "check:codeowners": "node scripts/generate-codeowners.js --check",
    "check:game-pages": "node scripts/generate-game-pages.js --check",
    
    "//5": "=== MODERATION ===",
    "promote:runs": "node scripts/promote-runs.js",
    "promote:runs:dry": "node scripts/promote-runs.js --dry-run"
    
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "terser": "^5.27.0"
  }
}
